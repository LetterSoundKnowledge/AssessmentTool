@model string
<div class="modal fade" id="addPupilModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-dark-primary">
                <h5 id="modalTitle" class="modal-title light-green">Legg til elev</h5>
                <button type="button" class="btn float-end navbar-text-light-green" data-bs-dismiss="modal" aria-label="Close"><i class="bi bi-x-lg"></i></button>
            </div>
            <form asp-area="ClassManagement" asp-page="/Pupils/AddPupils" asp-route-returnurl="@Model" method="post">
                <div class="modal-body">
                    <div id="pupils">
                        <div id="pupil-0" class="row">
                            <div class="col">
                                <input type="text" name="[0].FirstName" class="form-control" aria-required="true" required placeholder="Fornavn" />
                            </div>
                            <div class="col">
                                <input type="text" name="[0].LastName" class="form-control" aria-required="true" required placeholder="Etternavn" />
                            </div>
                            <div class="col">
                                <input type="date" name="[0].BirthDate" class="form-control" aria-required="true" required placeholder="Fødselsdato" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Avbryt</button>
                    <button id="submitBtn" type="submit" class="btn btn-primary">Legg til elev</button>
                </div>
            </form>
        </div>
    </div>
</div>
