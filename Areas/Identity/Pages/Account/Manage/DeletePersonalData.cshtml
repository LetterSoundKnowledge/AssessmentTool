@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Slett bruker";
    ViewData["ActivePage"] = ManageNavPages.Index;
    ViewData["SidebarActive"] = ActivePage.Profile;
}

<h3>@ViewData["Title"]</h3>




        <div class="alert alert-warning mx-2" role="alert">
            <p>
                <strong>Hvis du sletter brukeren din vil alle dine klasser, elever og deres testresultater også bli slettet. Dataen vil ikke kunne gjenopprettes.</strong>
            </p>
        </div>
        <form id="delete-user" method="post">
            <partial name="_StatusMessage" for="StatusMessage" />
            @if (Model.RequirePassword)
            {
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            }
            <button class="w-100 btn btn-lg mt-2 btn-danger" type="submit">Slett bruker</button>
        </form>
    </div>


@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
