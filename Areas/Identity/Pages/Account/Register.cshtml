@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrer ny bruker";
}

<div class="row mx-0 h-100">
    <div class="col-12 align-self-center">
        <div class="form-content">
            <div class="d-flex justify-content-center">
                <img src="~/img/Logo.svg" style="width:50%; height:50%" class="filter-light-green mb-1" />
            </div>
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h2 class="light-green">Lag en ny bruker</h2>
                <hr />
                <partial name="_StatusMessage" for="ErrorMessage" />
                <div class="form-floating">
                    <input asp-for="Input.FirstName" class="form-control" autocomplete="given-name" aria-required="true" />
                    <label asp-for="Input.FirstName"></label>
                    <span asp-validation-for="Input.FirstName" class="light-green"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.LastName" class="form-control" autocomplete="family-name" aria-required="true" />
                    <label asp-for="Input.LastName"></label>
                    <span asp-validation-for="Input.LastName" class="light-green"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email">E-post</label>
                    <span asp-validation-for="Input.Email" class="light-green"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.Password">Passord</label>
                    <span asp-validation-for="Input.Password" class="light-green"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.ConfirmPassword">Gjenta passord</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="light-green"></span>
                </div>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary mt-2 mb-2">Registrer bruker</button>
                <div>
                    <p>
                        <a class="light-green" id="login" asp-page="./Login">Har du allerede en bruker? Logg inn her</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
